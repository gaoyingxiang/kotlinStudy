<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <include layout="@layout/layout_activity_title"/>
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <!--头像部分-->
        <LinearLayout
                android:gravity="center_horizontal"
                android:background="@color/color_68c946"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <!--用户头像-->
            <com.joooonho.SelectableRoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cv_head"
                    android:src="@mipmap/icon_my_head_default"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    app:sriv_oval="true"/>
            <TextView
                    android:id="@+id/tv_name"
                    android:layout_marginTop="19dp"
                    android:text="德玛西亚"
                    android:textColor="@color/color_ffffff"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_phone"
                    android:layout_marginBottom="60dp"
                    android:layout_marginTop="6dp"
                    android:text="123456"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <!--下方菜单-->
        <LinearLayout
                android:layout_marginTop="190dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RelativeLayout
                    android:id="@+id/rl_version"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_item_shape">
                <TextView
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:text="版本更新"
                        android:textSize="15dp"
                        android:textColor="@color/color_1a1a1a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/tv_version"
                        android:textSize="15dp"
                        android:layout_marginRight="18dp"
                        android:layout_toLeftOf="@+id/iv_right"
                        android:text="V2.1"
                        android:textColor="@color/color_1a1a1a"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <ImageView
                        android:id="@+id/iv_right"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>
            <TextView
                    android:id="@+id/tv_login_off"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="@color/color_1a1a1a"
                    android:text="退出登录"
                    android:background="@drawable/bg_item_shape"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>